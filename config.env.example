# WiFi Penetration Testing API Configuration
# Copy this file to config.env and modify as needed

# API Security - CHANGE THE API KEY!
API_KEY=your-secret-api-key-change-this-immediately
RATE_LIMIT=10

# Network Interfaces (auto-detected if not specified)
SCAN_IFACE=wlan0
MON_IFACE=wlan1

# Capture Settings
CAP_DIR=/home/pi/captures
ATTACK_TIMEOUT=900

# Wordlist Directory
WORDLIST_DIR=/usr/share/wordlists

# GPU PC Integration
GPU_PC_IP=192.168.0.102
GPU_PC_USER=Jhye
GPU_PC_INCOMING_DIR=/home/Jhye/wifi-crack-pc/incoming
SSH_KEY_PATH=/home/pi/.ssh/wifi_crack_key
ENABLE_GPU_OFFLOAD=true

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO